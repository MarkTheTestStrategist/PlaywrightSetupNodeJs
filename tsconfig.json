{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,

        "types": ["@playwright/test", "node"],

        "allowJs": true, // lets you keep any existing .js during migration
        "checkJs": false, // set true if you want TS to type-check your .js files

        "baseUrl": ".",
        "paths": {
            "@helpers/*": ["helpers/*"],
            "@fixtures/*": ["fixtures/*"],
            "@utilities/*": ["utilities/*"],
            "@tests/*": ["tests/*"]
        }
    },
    "include": [
        "tests/**/*",
        "helpers/**/*",
        "fixtures/**/*",
        "utilities/**/*",
        "playwright.config.ts"
    ],
    "exclude": [
        "node_modules",
        "playwright-report",
        "test-results",
        "artifacts"
    ]
}
